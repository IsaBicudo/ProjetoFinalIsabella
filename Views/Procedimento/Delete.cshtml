@model ProjetoFinalIsabella.Models.Procedimento

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja excluir isto?</h3>
<div>
    <h4>Procedimento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcedimentoNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcedimentoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcedimentoObservacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcedimentoObservacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoProcedimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoProcedimento.TipoProcedimentoNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProcedimentoId" />
        <input type="submit" value="Deletar" class="btn-danger" /> 
        <a asp-action="Index" class="btn-primary">Voltar à lista</a>
    </form>
</div>
