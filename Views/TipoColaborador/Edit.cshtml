@model ProjetoFinalIsabella.Models.TipoColaborador

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Tipo de Colaborador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TipoColaboradorId" />
            <div class="form-group">
                <label asp-for="TipoColaboradorNome" class="control-label"></label>
                <input asp-for="TipoColaboradorNome" class="form-control" />
                <span asp-validation-for="TipoColaboradorNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-primary">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
